<div class="facebook-box">
	<p>Log in with Facebook.</p>
	<p class="comment">It's fast and easy.</p>
	<%= render :partial => '/devise/shared/facebook_link' %>
</div>
<div class="or">
	<%= image_tag 'or2.png' %> 
</div>
<div class="userpwd">
<p>Log in using your e-mail address.</p>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
	<div class="input-prepend">
		<span class="add-on"><i class="icon-envelope"></i></span>
		<%= f.email_field :email, :placeholder => 'E-mail address' %>
	</div>
  </div>

  <div>
	<div class="input-prepend">
		<span class="add-on"><i class="icon-lockimg"></i></span>
		<%= f.password_field :password, :placeholder =>  'Password'%>
	</div>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div id="rememberme"><%= f.check_box :remember_me %> Remember me</div>
  <% end -%>

  <div class="signin"><%= f.submit "Sign in", :class => 'btn btn-primary'  %></div>

  <div><%= link_to "Forgot your password?", lostpassword_path, :id => 'lostmypwdlink', 'data-target' => '#lostmypwdModal' %></div>
<% end %>
</div>



