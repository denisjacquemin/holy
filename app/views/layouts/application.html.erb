<!DOCTYPE html>
	<head>
		<meta charset="utf-8">
		<meta name="description" content"">
		<meta name="viewport" content="width=device-width">
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<title>Escape: <%= yield :title %></title>
		<meta property="og:title" content="<%= yield :title %>"/>
		<meta property="og:type" content="page"/>
		<meta property="og:image" content="<%= yield :image_cover %>"/>
		<meta property="og:url" content="<%= yield :url %>"/>
		<meta property="og:site_name" content="Escape"/>
		<meta property="fb:admins" content="<%= ENV['FACEBOOK_APP_ID'] %>"/>
	</head>
	<body>
		<header>
			<div class="wrapper">
				<ul>
					<% if user_signed_in? %>
					<li class="dropdown">
						<a href="#"><%= "Welcome #{current_user.name}" %> <span class="arrow"></span></a>
						<ul class="">
							<li><a href="#">My Listing</a></li>
							<li><%= link_to "Account Settings", edit_user_registration_url %> </li>
							<li><%= link_to 'Logout', logout_url %></li>
						</ul>
					</li>
					<% else %>
						<li><a data-toggle="modal" href="/register" data-target="#SignUpModal">Sign Up</a></li>
						<li class="divider-vertical">.</li>
						<li><a data-toggle="modal" href="/login" data-target="#loginModal">Log In</a></li>
					<% end %>
					<li class="divider-vertical">.</li>
					<li><a href="#">Contact</a></li>
					<li class="divider-vertical">.</li>
					<li><a href="#">Help</a></li>
					<li class="divider-vertical">.</li>
					<li><%= link_to 'LIST YOUR PLACE', new_item_path, :class => 'btn btn-warning btn-small', :id => 'listyourplace' %></li>
				</ul>
			</div>
		</header>
			<%= yield %>
		<footer>
		</footer>
		<% unless user_signed_in? %>
			<%= render :partial => 'shared/signup_modal' %>
			<%= render :partial => 'shared/login_modal' %>
			<%= render :partial => 'shared/lostmypwd_modal' %>
		<% end %>
	</body>
</html>