<fieldset>
  <div class="field row">
    <%= f.label :title %>
  	<div class="input">
    	<%= f.text_field :title %>
  	</div>
  </div>
  <div class="field row">
    <%= f.label :description %>
  	<div class="input">
    	<%= f.text_area :description %>
  	</div>
  </div>
  <div class="field row">
    <%= f.label :address %>
  	<div class="input">
    	<%= f.text_field :address %>
  	</div>
  </div>
  <div class="field row">
    <div class="col1">
		<%= f.label :price %>
  		<div class="input">
    		<%= f.text_field :price %>
  		</div>
	</div>
	<div class="col2">
		<%= f.label :sleeps, 'Number of Sleeps' %>
  		<div class="input">
    		<%= f.text_field :sleeps %>
  		</div>
	</div>
  </div>
</fieldset>